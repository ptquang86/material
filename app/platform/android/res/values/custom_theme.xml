<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<!-- theme: material default -->
    <style name="MaterialTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
    	<item name="android:textAllCaps">false</item>
        <item name="colorPrimary">#3c6ad2</item>
        <item name="colorPrimaryDark">#2B54B6</item>
        <!-- date time picker theme -->
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/MyTimePickerDialogTheme</item>
    </style>
    
    <!-- theme: date time picker theme -->
    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
    	<item name="colorAccent">#04BBEF</item>
	    <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
	</style>
	<style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
	    <item name="android:headerBackground">#E50000</item>
	</style>
	<style name="MyTimePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#04BBEF</item>
        <item name="android:timePickerStyle">@style/MyTimePickerStyle</item>
    </style>
    <style name="MyTimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:headerBackground">#E50000</item>
    </style>
    
    <!-- theme: transparent action-bar -->
    <style name="TransparentActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
		<item name="android:actionBarStyle">@style/ThemeActionBar</item>
		<item name="android:windowActionBarOverlay">true</item>
		<item name="actionBarStyle">@style/ThemeActionBar</item>
		<item name="windowActionBarOverlay">true</item>
	</style>
	<style name="ThemeActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@null</item>
        <item name="background">@null</item>
	</style>
	
</resources>